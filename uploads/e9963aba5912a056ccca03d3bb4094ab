<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Preview de URL</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 600px;
      margin: 40px auto;
      padding: 0 20px;
    }
    input[type="url"] {
      width: 100%;
      padding: 10px;
      font-size: 1rem;
      margin-bottom: 10px;
    }
    button {
      padding: 10px 15px;
      font-size: 1rem;
      cursor: pointer;
    }
    .preview {
      margin-top: 20px;
      border: 1px solid #ddd;
      padding: 15px;
      border-radius: 6px;
    }
    .preview img {
      max-width: 100%;
      height: auto;
      display: block;
      margin-bottom: 10px;
    }
    .error {
      color: red;
      margin-top: 10px;
    }
    a {
      color: #0066cc;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>Preview de URL</h1>
  <input type="url" id="urlInput" placeholder="Cole a URL aqui" />
  <button id="fetchBtn">Buscar preview</button>
  <div id="error" class="error"></div>
  <div id="preview" class="preview" style="display:none;">
    <a id="previewLink" href="#" target="_blank" rel="noopener noreferrer">
      <h2 id="previewTitle"></h2>
    </a>
    <img id="previewImage" src="" alt="Imagem do preview" />
    <p id="previewDescription"></p>
    <p><strong>Site:</strong> <span id="previewSite"></span></p>
  </div>

  <script>
    const fetchBtn = document.getElementById('fetchBtn');
    const urlInput = document.getElementById('urlInput');
    const errorDiv = document.getElementById('error');
    const previewDiv = document.getElementById('preview');
    const previewTitle = document.getElementById('previewTitle');
    const previewDescription = document.getElementById('previewDescription');
    const previewImage = document.getElementById('previewImage');
    const previewSite = document.getElementById('previewSite');
    const previewLink = document.getElementById('previewLink');

    fetchBtn.addEventListener('click', async () => {
      const url = urlInput.value.trim();
      errorDiv.textContent = '';
      previewDiv.style.display = 'none';

      if (!url) {
        errorDiv.textContent = 'Por favor, insira uma URL válida.';
        return;
      }

      try {
        const apiUrl = `https://pbc-api-nm5c.onrender.com/preview?url=${encodeURIComponent(url)}`;
        const response = await fetch(apiUrl);

        if (!response.ok) {
          const errorData = await response.json();
          errorDiv.textContent = errorData.error || 'Erro ao buscar preview.';
          return;
        }

        const data = await response.json();

        previewTitle.textContent = data.title || 'Sem título';
        previewDescription.textContent = data.description || 'Sem descrição';
        previewSite.textContent = data.site || 'Desconhecido';
        previewLink.href = data.url || url;

        if (data.image) {
          previewImage.src = data.image;
          previewImage.style.display = 'block';
          previewImage.alt = `Imagem de ${data.title || 'preview'}`;
        } else {
          previewImage.style.display = 'none';
        }

        previewDiv.style.display = 'block';
      }catch (err) {
  console.error('Erro inesperado:', err);
  return res.status(500).json({ error: 'Erro inesperado', details: err.message });
}

    });
  </script>
</body>
</html>
